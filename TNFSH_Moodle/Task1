#include <iostream>
#include <cmath>
#include <stdio.h>
using namespace std;
int main(int argc, const char * argv[]) {
    // insert code here...
    double a,b,c,d,s;
    cin >>a >>b >>c;
    s = (a+b+c)/2;
    d =sqrt(s*(s-a)*(s-b)*(s-c));
    printf("%.2f\n",d);
    
    
    return 0;
    
    
}
